{
  "name": "@spacelift-io/backstage-scaffolder-actions",
  "version": "<VERSION>",
  "description": "Backstage scaffolder actions for Spacelift.io integration",
  "keywords": [
    "backstage-plugin",
    "backstage",
    "spacelift",
    "scaffolder",
    "actions",
    "infrastructure-as-code",
    "IaC",
    "devops",
    "cloud",
    "category/cloud",
    "category/infrastructure"
  ],
  "homepage": "https://spacelift.io",
  "repository": "https://github.com/spacelift-io/backstage-plugins.git",
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "backstage": {
    "role": "backend-plugin-module",
    "pluginId": "spacelift-io-scaffolder-actions",
    "pluginPackage": "@spacelift-io/backstage-scaffolder-actions",
    "features": {
      ".": "@backstage/BackendFeature"
    }
  },
  "scripts": {
    "start": "backstage-cli package start",
    "build:types": "tsc -b",
    "build": "yarn build:types && backstage-cli package build",
    "yalc:publish": "yarn build && yalc publish --push",
    "yalc:watch": "chokidar 'src/**/*.ts' -c 'yarn build && yalc publish --push'",
    "lint": "backstage-cli package lint",
    "test": "backstage-cli package test",
    "test:watch": "backstage-cli package test --watch",
    "clean": "backstage-cli package clean",
    "prepack": "backstage-cli package prepack",
    "postpack": "backstage-cli package postpack"
  },
  "dependencies": {
    "@backstage/backend-plugin-api": "^1.3.0",
    "@backstage/errors": "^1.2.7",
    "@backstage/plugin-scaffolder-node": "^0.5.0",
    "@spacelift-io/backstage-integration-backend": "workspace:^",
    "graphql-request": "^7.1.2",
    "yaml": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@backstage/backend-test-utils": "^1.4.0",
    "@backstage/cli": "^0.32.0",
    "@types/node": "^18.0.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "~5.4.5"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/dist/**",
      "!**/node_modules/**",
      "!plugin.ts"
    ]
  },
  "typesVersions": {
    "*": {
      "package.json": [
        "package.json"
      ]
    }
  }
}
